@using BookCarProjectMaster.Models
@model List<CartItem>
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutCartItem.cshtml";
}

<table class="table table-dark">
    <tr>
        <td>Ten Xe</td>
        <td>gia thue</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.tenXe</td>
            <td>@item.giaThue</td>
        </tr>
    }
    <tr>
        <td>Tong tien thue: @ViewBag.Tongtien $</td>
    </tr>
</table>
<div class="text-center">
    @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "Giohang", "CartItemBC", new { @class = "book-now-btn" })
</div>

<div class="book-a-car col-lg-5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <form>
            <div>
                <h4>Họ tên của bạn: </h4>
                <div class="name-input">
                    <input type="text" name="hoTen" placeholder="Nhập họ tên của bạn (Nguyễn Văn A)"/>
                </div>
            </div>
            <div>
                <h4>Địa chỉ: </h4>
                <div class="name-input">
                    <input type="text" name="diaChi" placeholder="Nhập địa chỉ" />
                </div>
            </div>
            <div>
                <h4>Số điện thoại: </h4>
                <div>
                    <input type="text" name="sdt" placeholder="Nhập số điện thoại (038XXXXXXX)"/>
                </div>
            </div>
            <div>
                <h4>Chứng minh thư: </h4>
                <div class="name-input">
                    <input type="text" name="cmnd" placeholder="Nhập số chứng minh nhân dân (301XXXXXX)" />
                </div>
            </div>
            <div>
                <h4>Ngày đặt xe: @DateTime.Now.ToShortDateString()</h4>
                <div>
                    
                </div>
            </div>
            <div class="pick-up-date book-item">
                <h4>Ngày nhận xe: </h4>
                <div>
                    <input type="date" name="ngayNhan" placeholder="Chọn ngày" />
                </div>
            </div>
            <div>
                <h4>Ngày trả xe: </h4>
                <div>
                    <input type="date" name="ngayTra" />
                </div>
            </div>
            <div>
                <div class="input-submit">
                    <input type="submit" value="ĐỒNG Ý ĐẶT XE" />
                </div>
            </div>
        </form>
    }
</div>
<div class="text-center">

</div>